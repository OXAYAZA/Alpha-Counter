//- Counter
mixin counter( value )
	h2.counter&attributes( attributes )= value


//- Progress Circle
mixin progress-circle( value )
	svg.progress-circle( x='0', y='0', width='100', height='100', viewbox='0 0 100 100', data-value= value )&attributes( attributes )
		circle.bg( cx=50, cy=50, r=49 )
		circle.fg.clipped( cx=50, cy=50, r=50 )


//- Countdown
mixin countdown( data )
	.countdown( data-countdown data-from= data.from, data-to= data.to, data-count= data.count )
		each value in [ 'days', 'hours', 'minutes', 'seconds' ]
			-
				var
					counterAttr = {},
					circleAttr = {};

				counterAttr[ 'data-counter-'+ value ] = '';
				circleAttr[ 'data-progress-'+ value ] = '';

			.countdown-block
				svg.countdown-circle( x='0', y='0', width='100', height='100', viewbox='0 0 100 100' )&attributes( circleAttr )
					circle.bg( cx=50, cy=50, r=49 )
					circle.fg.clipped( cx=50, cy=50, r=50 )
				.countdown-inner
					h1.countdown-counter&attributes( counterAttr ) 00
					h6.countdown-title= value
